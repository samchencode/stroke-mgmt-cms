{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "Designation": {
      "type": "enumeration",
      "enum": [
        "Article",
        "Stroke Facts",
        "Stroke Signs",
        "Disclaimer",
        "About"
      ],
      "default": "Article",
      "required": true
    },
    "Summary": {
      "type": "string"
    },
    "Thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "ShowOnHomeScreen": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
