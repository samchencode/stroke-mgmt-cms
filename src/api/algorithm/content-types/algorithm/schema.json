    "outcomes": {
      "type": "component",
      "repeatable": true,
      "component": "algorithm-components.outcome"
    },
    "switches": {
      "type": "component",
      "repeatable": true,
      "component": "algorithm-components.switch"
    },
    "ShowOnHomeScreen": {
      "type": "boolean",
